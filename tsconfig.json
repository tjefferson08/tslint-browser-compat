{
  "compilerOptions": {
    "strict": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,

    // Output
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "outDir": "rules",
    "lib": ["es2015", "dom"]
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}
